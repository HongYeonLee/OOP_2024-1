package Week4;
import java.util.Scanner;

public class 예제3_2 {
	public static main void (String[] args)
	{
		int n, count = 0, sum = 0;
		double avg;
		
		while (true)
		{
			System.out.println("정수를 입력하세요: (종료하려면 -1 입력)");
			Scanner input = new Scanner(System.in);
			n = input.nextInt();
			if(n == -1)
				break;
			count++;
			sum += n;
		}
		avg = sum/count;
		System.out.printf("총 %d개의 숫자가 입력되었으며 합은 %d이고 평균은 %lf입니다", count, sum, avg);
	}
	
}
