package Week4;
import java.util.Scanner;

public class 실습2_위시리스트 {
	
	public static void wishlist(String item, int price) {
		int sum = 0, count = 0;
		String[] wishlist = new String[1000];
		wishlist[count++] = item;
		sum += price;
		
		if (sum > 100000)
			showWishlist(wishlist, sum);
	}
	
	public static void showWishlist(String[] wishlist, int sum)
	{
		System.out.printf("지금까지 구입한 물건의 개수는 %d개이며 내용은 다음과 같습니다\n", wishlist.length);
		for (int i = 0; i < wishlist.length; i++)
			System.out.print(wishlist[i] + " ");
		System.out.printf("총 금액은 %d원 입니다", sum);
	}
	
	
	public static void main (String[] args)
	{
		System.out.println("구입하고 싶은 물건의 이름과 가격을 말해주세요: ");
		Scanner input = new Scanner(System.in);
		
		String item = input.next();
		int price = input.nextInt();
		
		
		
	}
}
